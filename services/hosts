#!/bin/bash

PREFIX="php"
SUBNET="172.18."

MYSQL=$SUBNET"1.2"
RABBIT=$SUBNET"1.3"
JIRA=$SUBNET"1.4"
MASTER_CONT=$SUBNET"1.5"
TEST=$SUBNET"1.6"
SQUID7=$SUBNET"1.7"
SAMBA=$SUBNET"1.8"
C1=$SUBNET"1.83"

PHP53=$SUBNET"53."
PHP71=$SUBNET"71."
PHP72=$SUBNET"72."

PREFIX53=$PREFIX"53"
PREFIX71=$PREFIX"71"
PREFIX72=$PREFIX"72"

sed -i -e "/^172.18/ d" /etc/hosts

echo ""$MYSQL"	containerdb" >> /etc/hosts
echo ""$RABBIT"	rabbitmq" >> /etc/hosts
echo ""$JIRA"	jira" >> /etc/hosts
echo ""$SQUID7"	squid.7" >> /etc/hosts
echo ""$SAMBA"	samba.kis" >> /etc/hosts
echo ""$C1"	1c.v83" >> /etc/hosts

echo ""$TEST"	test.cont" >> /etc/hosts
echo ""$MASTER_CONT"	master.cont" >> /etc/hosts

echo ""$PHP53"53	$PREFIX53" >> /etc/hosts
echo ""$PHP71"71	$PREFIX71" >> /etc/hosts
echo ""$PHP72"72	$PREFIX72" >> /etc/hosts

echo ""$PHP53"3	$PREFIX53.kis" >> /etc/hosts
echo ""$PHP53"4	$PREFIX53.kisnew" >> /etc/hosts
echo ""$PHP53"5	$PREFIX53.kis.nekeng" >> /etc/hosts
echo ""$PHP53"6	$PREFIX53.kisnew.nekeng" >> /etc/hosts

echo ""$PHP53"11	$PREFIX53.webldap" >> /etc/hosts

echo ""$PHP71"3	$PREFIX71.empty" >> /etc/hosts
echo ""$PHP71"4	$PREFIX71.tools" >> /etc/hosts
echo ""$PHP71"5	$PREFIX71.webldap5" >> /etc/hosts
echo ""$PHP71"6	$PREFIX71.cont" >> /etc/hosts

echo ""$PHP72"3	$PREFIX72.empty" >> /etc/hosts
echo ""$PHP72"4	$PREFIX72.tools" >> /etc/hosts
echo ""$PHP72"5	$PREFIX72.webldap5" >> /etc/hosts
echo ""$PHP72"6	$PREFIX72.cont" >> /etc/hosts
echo ""$PHP72"7	$PREFIX72.portal" >> /etc/hosts
echo ""$PHP72"10	$PREFIX72.sqladmin" >> /etc/hosts

echo ""$PHP72"3	pma" >> /etc/hosts