<Virtualhost *:80>
	Alias /email /opt/WWW/container.ite-ng.ru/projects/roundcubemail
	ServerAdmin nikolns@ite-ng.ru
	ServerName email.ite-ng.ru
	ServerAlias email.nekeng.ru
	ServerAlias email.kzkt45.ru
	ServerAlias email.ite-eg.ru
	
	DocumentRoot "/opt/WWW/container.ite-ng.ru/projects/roundcubemail"
	
#	Alias /roundcubemail
	ErrorLog /var/log/httpd/error-roundcubemail.log
	CustomLog /var/log/httpd/access-roundcubemail.log combined

	<Directory "/opt/WWW/container.ite-ng.ru/projects/roundcubemail/">
		AllowOverride All
		Options -Indexes +FollowSymLinks
		<IfModule mod_authz_core.c>
		# Apache 2.4
		<RequireAny>
			Require all granted
		</RequireAny>
		</IfModule>
		<IfModule !mod_authz_core.c>
		# Apache 2.2
			Order allow,deny
			Allow from all
		</IfModule>
	</Directory>
	php_admin_value upload_max_filesize     20M
	php_admin_value post_max_size           20M
</Virtualhost>
