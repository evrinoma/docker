#!/bin/bash
SUBNET="172.18."
MYSQL=$SUBNET"1.2"
RABBIT=$SUBNET"1.3"
PHP53=$SUBNET"53."
PHP71=$SUBNET"71."
PHP72=$SUBNET"72."
PREFIX="php"
PREFIX53=$PREFIX"53"
PREFIX71=$PREFIX"71"
PREFIX72=$PREFIX"72"

echo ""$MYSQL"	containerdb" >> /etc/hosts
echo ""$RABBIT"	rabbitmq" >> /etc/hosts

echo ""$PHP53"53	$PREFIX53" >> /etc/hosts
echo ""$PHP71"71	$PREFIX71" >> /etc/hosts
echo ""$PHP72"72	$PREFIX72" >> /etc/hosts

echo ""$PHP53"3	$PREFIX53.kis.ite-ng.ru" >> /etc/hosts
echo ""$PHP53"4	$PREFIX53.kisnew.ite-ng.ru" >> /etc/hosts

echo ""$PHP53"5	$PREFIX53.kis.nekeng.ru" >> /etc/hosts
echo ""$PHP53"6	$PREFIX53.kisnew.nekeng.ru" >> /etc/hosts

echo ""$PHP71"3	$PREFIX71.empty" >> /etc/hosts
echo ""$PHP71"4	$PREFIX71.tools" >> /etc/hosts
echo ""$PHP71"5	$PREFIX71.webldap5" >> /etc/hosts
echo ""$PHP71"6	$PREFIX71.cont.ite-ng.ru" >> /etc/hosts

echo ""$PHP72"3	$PREFIX72.empty" >> /etc/hosts
echo ""$PHP72"4	$PREFIX72.tools" >> /etc/hosts
echo ""$PHP72"5	$PREFIX72.webldap5" >> /etc/hosts
echo ""$PHP72"6	$PREFIX72.cont.ite-ng.ru" >> /etc/hosts
